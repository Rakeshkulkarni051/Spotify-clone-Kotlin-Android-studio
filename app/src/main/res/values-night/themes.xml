<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Soundify"  parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Make ActionBar invisible -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Set the color of the status bar to transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Set the window background to null to make it fully transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Specify that this theme has a transparent status bar -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Specify that this theme has a transparent navigation bar if needed -->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#121212</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->

    </style>
</resources>